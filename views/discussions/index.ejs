<% include ../partials/header %>

<div class="container discussion-index">
  <div class="row">
    <div class="col-lg-12">
      <h3>Available Discussions</h3>
      <hr>
    </div>
  </div>
  <p>
    <a class="btn btn-primary btn-sm" href="/discussions/new">Add New Discussion</a>
  </p>
  <div id="table">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Description</th>
          <th scope="col">Author</th>
        </tr>
      </thead>
      <tbody>
        <% discussions.forEach(function(discussion) { %>
          <tr>
            <td><a href="/discussions/<%= discussion._id %>"><%= discussion.name %></a></td>
            <td><%= discussion.description %></td>
            <td><%= discussion.author.username %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<% include ../partials/footer %>